{
    "extends": [
        "stylelint-config-standard"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "selector-class-pattern": null,
        "keyframes-name-pattern": null,
        "order/properties-alphabetical-order": true,
        "no-descending-specificity": null
    },
    "ignoreFiles": [
        "**/node_modules/**",
        "**/dist/**"
    ]
}